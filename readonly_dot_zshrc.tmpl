PATH="/nix/var/nix/profiles/default/bin:/usr/local/opt/coreutils/libexec/gnubin:/usr/local/bin:$HOME/.local/bin:$HOME/.cargo/bin:/opt/homebrew/bin:$HOME/scratch/scripts:$PATH"

ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"
[ ! -d $ZINIT_HOME ] && mkdir -p "$(dirname $ZINIT_HOME)"
[ ! -d $ZINIT_HOME/.git ] && git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
source "${ZINIT_HOME}/zinit.zsh"

zinit ice depth=1; zinit light romkatv/powerlevel10k

# Vars
export OP_ACCOUNT={{ .onepassword.account | quote }}

# Aliases
alias ls='ls -al --color=auto'
alias ch='chezmoi'

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ -f ~/.p10k.zsh ]] && source ~/.p10k.zsh
[[ -f ~/.p10k.rtx.zsh ]] && source ~/.p10k.rtx.zsh

eval "$(mise activate zsh)"
eval "$(direnv hook zsh)"

for f in $HOME/.zsh.d/*; do
  [[ -d $f ]] && continue
  source "$f"
done
